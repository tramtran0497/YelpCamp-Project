<% layout('layouts/boilerplate') %>

<h1>Create A new campground</h1>



<div class="row">
    <h1 class="text-center">
        New Campgrounds
    </h1>
    <div class="col-6 offset-3">
        <form class='validated-form' action="/campgrounds" method="POST" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label> 
                <input class="form-control" type="text" id="title" name='campground[title]' required>
                <div class="valid-feedback">
                    Look good! We need to know the destination's name
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name='campground[location]' required>
                <div class="valid-feedback">
                    Wonderful! Now we are knowing the location
                </div>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="imgage">Image URL</label>
                <input class="form-control" type="text" id="imgage" name='campground[image]' required>
                <div class="valid-feedback">
                    Great! It is beautiful >>>>
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price"placeholder="0.00" aria-label="price" aria-describedby="price-label" name='campground[price]' required>
                    <div class="valid-feedback">
                        Awesome! 
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name='campground[description]' required></textarea>
                <div class="valid-feedback">
                    Yep! Your description
                </div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Adding Image files
                </label>
                <input class="form-control " type="file" id="image" name="image" multiple>
            </div>

            <div class="mb-3">
                <button class="btn btn-success" >Add a campground
                </button>
            </div>
            <div class="mb-3">
                <a href="/campgrounds">Back to Home Page</a>
            </div>
        </form>
    </div>
</div>

